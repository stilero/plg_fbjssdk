<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - FBJSSDK</name>
	<author>Daniel Eliasson - joomla at stilero.com</author>
	<creationDate>2012-dec-29</creationDate>
	<copyright>Copyright (c) 2012-dec-29 Stilero Webdesign http://www.stilero.com. All rights reserved.</copyright>
	<authorEmail>joomla@stilero.com</authorEmail>
	<authorUrl>www.stilero.com</authorUrl>
	<version>1.0</version>
	<license>GPLv2</license>
	<description>FB JavaScript SDK</description>
	<files>
            <filename plugin="fbjssdk">fbjssdk.php</filename>
            <folder>includes</folder>
	</files>
	<languages folder="language">
            <language tag="en-GB">en-GB.plg_system_fbjssdk.ini</language>
            <language tag="en-GB">en-GB.plg_system_fbjssdk.sys.ini</language>
        </languages>
        <config>
            <fields name="params">
                <fieldset name="settings" label="PLG_SYSTEM_FBJSSDK_SETTINGS">
                    <field name="fbappid" type="text" default="" label="PLG_SYSTEM_FBJSSDK_FBAPPID" description="PLG_SYSTEM_FBJSSDK_FBAPPID_DESC"/>
                </fieldset>
            </fields>
        </config>
	<administration>
            <languages folder="language">
                <language tag="en-GB">en-GB.plg_system_fbjssdk.ini</language>
                <language tag="en-GB">en-GB.plg_system_fbjssdk.sys.ini</language>
	    </languages>
	</administration>
</extension>